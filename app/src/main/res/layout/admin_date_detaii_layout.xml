<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp">


    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:id="@+id/admin_date_detail_incharge_field"
        android:background="@color/grey"
        android:padding="8dp"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorPrimary"
        android:text="Faculty Incharge"
        android:gravity="center"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.9"
        android:id="@+id/admin_date_detail_branch_field"
        android:background="@color/grey"
        android:padding="8dp"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorPrimary"
        android:text="Branch"
        android:gravity="center"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:id="@+id/admin_date_detail_sem_field"
        android:background="@color/grey"
        android:padding="8dp"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorPrimary"
        android:text="Sem"
        android:gravity="center"
        android:textStyle="bold"
        />


    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:id="@+id/admin_date_detail_period_field"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:padding="8dp"
        android:background="@color/grey"
        android:textColor="@color/colorPrimary"
        android:text="Period"
        android:gravity="center"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="0dp"
        android:id="@+id/admin_date_detail_assigned_to_field"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@color/grey"
        android:padding="8dp"
        android:textColor="@color/colorPrimary"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:text="Assigned to-"
        android:gravity="center"
        android:textStyle="bold"

        />


</LinearLayout>