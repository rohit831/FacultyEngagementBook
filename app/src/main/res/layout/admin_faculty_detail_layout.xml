<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_marginBottom="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView

        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="@color/grey"
        android:padding="5dp"
        android:textColor="@color/colorPrimary"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        android:text="11-04-17"
        android:gravity="center"
        android:id="@+id/admin_faculty_detail_date_field" />


    <TextView

        android:layout_width="0dp"
        android:layout_weight="0.8"
        android:layout_height="match_parent"
        android:background="@color/grey"
        android:padding="5dp"
        android:textColor="@color/colorPrimary"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        android:text="Bio.Tech"
        android:gravity="center"
        android:id="@+id/admin_faculty_detail_branch_field" />

    <TextView

        android:layout_width="0dp"
        android:layout_weight="0.6"
        android:layout_height="match_parent"
        android:background="@color/grey"
        android:padding="5dp"
        android:textColor="@color/colorPrimary"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        android:text="1st"
        android:gravity="center"
        android:id="@+id/admin_faculty_detail_sem_field" />


    <TextView
        android:layout_width="0dp"
        android:layout_weight="0.6"
        android:layout_height="match_parent"
        android:background="@color/grey"
        android:padding="5dp"
        android:textColor="@color/colorPrimary"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        android:text="VIII"
        android:gravity="center"
        android:id="@+id/admin_faculty_detail_period_field" />

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1.8"
        android:layout_height="match_parent"
        android:background="@color/grey"
        android:padding="5dp"
        android:textColor="@color/colorPrimary"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        android:text="Dr. Rajimwale"
        android:gravity="center"
        android:id="@+id/admin_faculty_detail_assignedto_field" />





</LinearLayout>